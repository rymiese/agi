<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_map">

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.aginavigation.ui.map.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_routes"
        android:name="com.example.aginavigation.ui.routes.RoutesFragment"
        android:label="Routes"
        tools:layout="@layout/fragment_routes" />


    <!-- Route detail -->
    <fragment
        android:id="@+id/navigation_route_detail"
        android:name="com.example.aginavigation.ui.routes.RouteDetailFragment"
        android:label="Route Details"
        tools:layout="@layout/fragment_route_detail" />

</navigation>
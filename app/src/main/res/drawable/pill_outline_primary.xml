<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Transparent fill so this is only an outline (pill) -->
    <solid android:color="@android:color/transparent" />

    <!-- Pill corners for pill shape -->
    <corners android:radius="20dp" />

    <!-- Light border similar to original outline style -->
    <stroke android:width="1dp" android:color="#E0E0E0" />

    <!-- Default padding preserved if used by layouts -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
